<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Shell.NavBarIsVisible="False"
             x:Class="eSnapFuse.MainPage">
    
    <Grid Margin="1" Padding="5"
          RowSpacing="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition/>
            <RowDefinition Height="45"/>
        </Grid.RowDefinitions>
        <Grid RowSpacing="30" Grid.Row="0">
            <Grid.ColumnDefinitions >
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <VerticalStackLayout 
                Grid.Column="0"
                VerticalOptions="Center">
            <Label Text="Find Your Perfect Photographer"
                   FontSize="14" 
                   Margin="0,0,0,0"
                   FontAttributes="Bold" FontFamily="FontM" />
            <Label Text="Captcher your spacial moments"
                   FontSize="10"
                   FontAttributes="None"
                   TextColor="#808080"
                   Margin="0,0"
                   FontFamily="FontM" />
            </VerticalStackLayout>
            <Frame Grid.Column="1" 
                   VerticalOptions="Center" 
                   CornerRadius="50"
                   WidthRequest="40"
                   HeightRequest="40"
                   HasShadow="False"
                   BackgroundColor="Transparent"
                   Padding="1">
                <Grid RowSpacing="10">
                    
                    <Label Text="circle" 
                       TextColor="Red" 
                       HorizontalOptions="End"
                       Margin="0,0,5,0" 
                       FontSize="10"
                       VerticalOptions="Start"
                       FontAttributes="Bold"
                       FontFamily="IconSolid"/>
                <Label Text="comment"  
                       FontSize="25" 
                       Margin="2,0,0,1"
                       VerticalOptions="Center"
                       FontAttributes="Bold"
                       FontFamily="IconRegular"/>
            </Grid>
            </Frame>
            <Frame BackgroundColor="AliceBlue" 
                   VerticalOptions="Center" 
                   HorizontalOptions="Center"
                   WidthRequest="40"
                   HeightRequest="40"
                   Padding="-15"
                   BorderColor="Transparent" 
                   HasShadow="False"
                   CornerRadius="50" 
                   Grid.Column="2">
                    <Image Source="image.jpg" />

                </Frame>        
            
        </Grid>
        
        <Grid Grid.Row="1" ColumnSpacing="2" RowSpacing="10">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="50"/>
            </Grid.ColumnDefinitions>
            <Frame Grid.Column="0" CornerRadius="10" HasShadow="False" BackgroundColor="AliceBlue" HeightRequest="30" Padding="0">
            <SearchBar SearchIconColor="Black" Placeholder="Search photographer, studios" HorizontalOptions="Start"  Margin="-10,0,0,0"/>
            </Frame>
            
            <Label Text="filter" Grid.Column="1" FontSize="25" TextColor="Gray" Margin="0,-8,0,0" FontFamily="IconSolid" HorizontalOptions="Center" VerticalOptions="Start"/>
            
            <HorizontalStackLayout Grid.Row="1" Spacing="5">
            <Frame  Grid.Row="1" Padding="0" HorizontalOptions="Start" WidthRequest="35" CornerRadius="40">               
                <Label Text="All" HorizontalOptions="Center" VerticalOptions="Center"/>               
            </Frame>
            <Frame  Grid.Row="1" Padding="0" HorizontalOptions="Start" WidthRequest="75" CornerRadius="40">               
                <Label Text="Wedding" HorizontalOptions="Center" VerticalOptions="Center"/>               
            </Frame>
            <Frame Grid.Row="1" Padding="0" HorizontalOptions="Start" WidthRequest="65" CornerRadius="40">               
                <Label Text="Portrait" HorizontalOptions="Center" VerticalOptions="Center"/>               
            </Frame>
            <Frame  Grid.Row="1" Padding="0" HorizontalOptions="Start" WidthRequest="60" CornerRadius="40">               
                <Label Text="Event" HorizontalOptions="Center" VerticalOptions="Center"/>               
            </Frame>
            <Frame Grid.Row="1" Padding="0" HorizontalOptions="Start" WidthRequest="60" CornerRadius="40">               
                <Label Text="Outdoor" HorizontalOptions="Center" VerticalOptions="Center"/>               
            </Frame>
            </HorizontalStackLayout>
        </Grid>
        <Grid Grid.Row="2" BackgroundColor="Transparent">
            <Grid RowDefinitions="50,5*">
                <HorizontalStackLayout Grid.Row="0" BackgroundColor="Transparent">
                    <Frame Margin="5" BackgroundColor="AntiqueWhite" WidthRequest="40"
                     HeightRequest="40" Padding="-15" CornerRadius="50">
                        <Image Source="image.jpg" />

                    </Frame>
                    <VerticalStackLayout Margin="5">
                    <Label Text="Daniel Baraka" Margin="2" FontAttributes="Bold"/>
                    <Label Text="@DanielBaraka" Margin="0" TextColor="Gray" FontAttributes="Bold"/>
                    </VerticalStackLayout>

                </HorizontalStackLayout>
                <VerticalStackLayout Grid.Row="0" HorizontalOptions="End" Margin="5" Padding="0">
                    <HorizontalStackLayout Padding="0,-10,0,0">
                    <VerticalStackLayout Margin="5">
                        <Label Text="Teu, sept, 2025" Margin="5" FontAttributes="Bold"/>
                        <Label Text="1 min ago" Margin="5,-3,0,0" TextColor="Gray" FontAttributes="Bold"/>
                    </VerticalStackLayout>
                        <Label Text="ellipsis-vertical" FontSize="35" Margin="5" TextColor="Gray" FontFamily="IconSolid"/>
                    </HorizontalStackLayout>
                </VerticalStackLayout>       

               
                <Frame Grid.Row="1" Padding="0" CornerRadius="10" Margin="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                       
                    </Grid.RowDefinitions>
                        <Frame Grid.Row="0" Padding="-15">
                            <Image Source="image.jpg" />
                        </Frame>
                        <Grid RowDefinitions="*,*,*" Grid.Row="1">
                            
                        <Grid Grid.Row="0" HeightRequest="50" VerticalOptions="Start"
                              Margin="10" ColumnDefinitions="*,*" RowDefinitions="*,*">
                            <Label FontAttributes="Bold" FontSize="19" FontFamily="FontM" Text="Echo Pictures TV" Grid.Column="0"/>
                            <HorizontalStackLayout Grid.Column="1" Grid.Row="0" Spacing="9" HorizontalOptions="End">
                            <Label FontAttributes="Bold" FontSize="19" FontFamily="IconSolid" Text="star" TextColor="Gold" />
                            <Label FontAttributes="Bold" FontSize="19" FontFamily="FontM" Text="1.4" Grid.Column="1" Grid.Row="0"/>
                            </HorizontalStackLayout>
                            <VerticalStackLayout Grid.Column="0" Grid.Row="1" Spacing="9" HorizontalOptions="Start">
                                <Label FontAttributes="Bold" FontSize="12" FontFamily="FontM" Text="I'm a professional photographer with more that five star rate." TextColor="Gray" />
                            </VerticalStackLayout>
                            <VerticalStackLayout Grid.Column="1" Grid.Row="1" Spacing="9" HorizontalOptions="End">
                                <Label FontAttributes="Bold" FontSize="12" FontFamily="FontM" Text="(127 viewer)" TextColor="Gray" />
                            </VerticalStackLayout>
                            
                            
                        </Grid>
                            <HorizontalStackLayout  Margin="10" Grid.Row="1" Spacing="55" HorizontalOptions="Start">
                                <VerticalStackLayout>
                                    <HorizontalStackLayout Spacing="10">
                                <Label FontAttributes="Bold" FontSize="19" FontFamily="IconSolid" Text="location-dot" TextColor="Green" />
                                <Label FontAttributes="Bold" FontSize="15" TextColor="Gray" FontFamily="FontM" Text="DownTown, Lilongwe"/>
                                    </HorizontalStackLayout>
                                    <HorizontalStackLayout Spacing="2" Margin="8">
                                        <Frame  Padding="0" HasShadow="True" CornerRadius="10" WidthRequest="70" HeightRequest="20">
                                        <Label Text="Wedding"  HorizontalOptions="Center"  FontFamily="FontM" />
                                        </Frame>
                                        <Frame  Padding="0" HasShadow="True" CornerRadius="10" WidthRequest="70" HeightRequest="20">
                                        <Label Text="Portrait"  HorizontalOptions="Center"  FontFamily="FontM" />
                                        </Frame>
                                        <Frame Padding="0" HasShadow="True" CornerRadius="10" WidthRequest="70" HeightRequest="20">
                                        <Label Text="Outdoor" HorizontalOptions="Center"  FontFamily="FontM" />
                                        </Frame>
                                   
                                </HorizontalStackLayout>
                                </VerticalStackLayout>
                            </HorizontalStackLayout>
                           
                             <Label FontAttributes="Bold" FontSize="19" FontFamily="IconSolid" Text="From $150" Grid.Row="3" HorizontalOptions="Start" Margin="10" VerticalOptions="Center" TextColor="Green" />
                            <Button x:Name="Profile" Clicked="Profile_Clicked" VerticalOptions="End" Grid.Row="3" HorizontalOptions="End" FontAttributes="Bold" Text="View Profile" HeightRequest="50" Margin="10" WidthRequest="100" />
                        </Grid>
                    </Grid>
                
            </Frame>
            </Grid>
        </Grid>
        <Grid Grid.Row="3">
            <Grid ColumnDefinitions="*, *, *, *" ColumnSpacing="4">
                <Frame CornerRadius="5" BackgroundColor="AliceBlue" HasShadow="False" Grid.Column="0"  Padding="0">
                    <VerticalStackLayout>
                    <Label Text="Home" FontSize="26" VerticalOptions="Start" HorizontalOptions="Center"  FontFamily="IconRegular"/>
                    <Label Text="Home" HorizontalOptions="Center" FontAttributes="Bold" FontFamily="FontM"/>
                    </VerticalStackLayout>
                </Frame>
                <Frame CornerRadius="5" Grid.Column="1" HasShadow="False"  Padding="0">
                    <VerticalStackLayout>
                    <Label Text="calendar" FontSize="26" VerticalOptions="Start" HorizontalOptions="Center"  FontFamily="IconRegular"/>
                    <Label Text="Bookings" HorizontalOptions="Center" FontAttributes="Bold" FontFamily="FontM"/>
                    </VerticalStackLayout>
                </Frame>
                <Frame CornerRadius="5" BackgroundColor="Transparent"  BackgroundColor="Transparent" Grid.Column="2" HasShadow="False" Padding="0">
                    <VerticalStackLayout>
                    <Label Text="bell" FontSize="26" VerticalOptions="Start" HorizontalOptions="Center"  FontFamily="IconRegular"/>
                    <Label Text="Notifications" HorizontalOptions="Center" FontAttributes="Bold" FontFamily="FontM"/>
                    </VerticalStackLayout>
                </Frame>
                <Frame CornerRadius="5" BackgroundColor="Transparent"  Grid.Column="3" HasShadow="False" Padding="0">
                    <VerticalStackLayout>
                    <Label Text="user" FontSize="26" VerticalOptions="Start" HorizontalOptions="Center"  FontFamily="IconRegular"/>
                    <Label Text="Profile" HorizontalOptions="Center" FontAttributes="Bold" FontFamily="FontM"/>
                    </VerticalStackLayout>
                </Frame>
                
            </Grid>
    </Grid>



    </Grid>



</ContentPage>
